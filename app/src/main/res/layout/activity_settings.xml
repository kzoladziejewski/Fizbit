<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kacper.fizbit.Settings">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/mUstawienia"
            android:layout_width="313dp"
            android:layout_height="59dp"
            android:layout_below="@+id/mCorgiScore"
            android:layout_centerHorizontal="true"
            android:background="@drawable/guzik_dzwieki" />


        <Button
            android:id="@+id/mLatwy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/mSredni"
            android:layout_alignBottom="@+id/mSredni"
            android:layout_toStartOf="@+id/mSredni"
            android:background="@drawable/guzik_latwy_nie_wcisniety" />

        <Button
            android:id="@+id/mSredni"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/mPowrot"
            android:layout_centerHorizontal="true"
            android:background="@drawable/guzik_sredni_wcisniety" />

        <Button
            android:id="@+id/mTrudny"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/mSredni"
            android:layout_alignBottom="@+id/mSredni"
            android:layout_toEndOf="@+id/mSredni"
            android:background="@drawable/guzik_trudny_nie_wcisniety" />

        <Button
            android:id="@+id/mPowrot"
            android:layout_width="342dp"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/guzik_powrot" />

        <ImageView
            android:id="@+id/mCorgiScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/corgi" />

        <Button
            android:id="@+id/on"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignStart="@+id/mUstawienia"
            android:layout_below="@+id/mUstawienia"
            android:layout_marginStart="57dp"
            android:background="@drawable/guzik_on_niewcisniety" />

        <Button
            android:id="@+id/off"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignEnd="@+id/mUstawienia"
            android:layout_below="@+id/mUstawienia"
            android:layout_marginEnd="55dp"
            android:background="@drawable/guzik_off_niewcisniety" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
